{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "diet-route": {
        "ClusterId": "diet-cluster",
        "Match": {
          "Path": "/diet-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "waste-route": {
        "ClusterId": "waste-cluster",
        "Match": {
          "Path": "/waste-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "Medication-route": {
        "ClusterId": "medication-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/medication-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      }
    },
    "Clusters": {
      "diet-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://diet.api:8080/"
          },
          "destination2": {
            "Address": "http://diet.api:8081/"
          }
        }
      },
      "waste-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://waste.api:8080/"
          },
          "destination2": {
            "Address": "http://waste.api:8081/"
          }
        }
      },
      "medication-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://medication.api:8080/"
          },
          "destination2": {
            "Address": "http://medication.api:8081/"
          }
        }
      }
    }
  }
}