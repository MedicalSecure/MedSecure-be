{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "diet-route": {
        "ClusterId": "diet-cluster",
        "Match": {
          "Path": "/diet-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "waste-route": {
        "ClusterId": "waste-cluster",
        "Match": {
          "Path": "/waste-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "sensor-route": {
        "ClusterId": "sensor-cluster",
        "Match": {
          "Path": "/sensor-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      }
    },
    "Clusters": {
      "diet-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://diet.api:8080"
          },
          "destination2": {
            "Address": "https://diet.api:8081"
          }
        }
      },
      "waste-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://waste.api:8080"
          },
          "destination2": {
            "Address": "https://waste.api:8081"
          }
        }
      },
      "sensor-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://sensor.api:8080" //name container microservice (not localhost)
          },
          "destination2": {
            "Address": "https://sensor.api:8081" //name container microservice (not localhost)
          }
        }
      }
    }
  }
}
